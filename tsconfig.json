/* docs:
- install: https://www.typescriptlang.org/download/
- init: https://www.typescriptlang.org/docs/handbook/compiler-options.html#compiler-options
- tsconfig: https://www.typescriptlang.org/tsconfig/
*/

{
  "compilerOptions": {
    // Module
    "target": "es2023", // Emitted JS syntax features
    "module": "nodenext", // Emitted module format. Must match moduleResolution
    "moduleResolution": "nodenext", // Allows you to import .ts files directly across workspace
    "esModuleInterop": true, // Allow default-style imports from CommonJS packages
    "useDefineForClassFields": true, // Modern class field

    // Type checking
    "strict": true, // Mandatory for most typescript-eslint rules
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true, // On switch cases, prevents missing break or return
    "noUncheckedSideEffectImports": true, // On side-effect-only-imports, validate if file exists
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Path aliases
    "baseUrl": ".", // Must be set for path aliases to work
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
